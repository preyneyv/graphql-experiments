  "description": "A visual query builder and experimentation platform for GraphQL.",
  "main": "dist/index.js",
  "files": [
    "dist",
    "experiments-ide.js",
    "experiments-ide.min.js",
    "experiments-ide.css",
    "experiments-ide.min.css"
  ],
  "repository": "https://github.com/preyneyv/graphql-experiments/tree/master/packages/ide",
  "author": "Pranav Nutalapati <pranavnutalapati@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.0.0-alpha.15",
    "mini-css-extract-plugin": "^1.3.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "rimraf": "^3.0.2",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "scripts": {
    "clean-all": "yarn clean-ts && yarn clean-bundles",
    "clean-ts": "rimraf dist tsconfig.tsbuildinfo",
    "clean-bundles": "rimraf experiments-ide.*{js,css} experiments-ide.*{js,css}.map *.html",
    "build-all": "yarn clean-ts && yarn build-ts && yarn build-bundles",
    "build-ts": "tsc",
    "build-bundles": "yarn build-bundles-dev && yarn build-bundles-min",
    "build-bundles-dev": "cross-env NODE_ENV=development yarn webpack --bail",
    "build-bundles-min": "cross-env NODE_ENV=production yarn webpack --bail",
    "dev": "yarn clean-bundles && cross-env NODE_ENV=development yarn webpack serve"
  }
}
